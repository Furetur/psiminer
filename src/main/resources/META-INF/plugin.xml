<idea-plugin>
    <id>io.github.jbr.psiminer</id>
    <name>PSI miner</name>
    <vendor email="spirin.egor@mail.ru" url="https://github.com/JetBrains-Research/psi-embeddings">JetBrains Research</vendor>

    <description>Extract code in different representations based on PSI trees and using astminer</description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <appStarter implementation="Runner"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="DumpPSIAction" class="DumpPSIAction" text="Dump PSI" description="Dumps PSI Info">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>

    </actions>
</idea-plugin>